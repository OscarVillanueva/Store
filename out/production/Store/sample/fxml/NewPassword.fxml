<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXButton?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.controllers.ControllerNewPassword"
          prefHeight="250.0" prefWidth="450.0">
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>

    <Label text="NUEVA CONTRASEÑA" GridPane.rowIndex="0" GridPane.columnIndex="2" >
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text=""/>
    <Label text="Contraseña anterior:  " GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="txtPastPassword" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="100.0"/>

    <Label text="Nueva Contraseña:  " GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="txtNewPassword" GridPane.columnIndex="2" GridPane.rowIndex="4" prefWidth="100.0"/>
    <Label GridPane.rowIndex="5" GridPane.columnIndex="0" text=""/>
    <HBox GridPane.rowIndex="6" GridPane.columnIndex="2" spacing="10">
        <JFXButton fx:id="btnCancelar" text="CANCELAR" />
        <Button fx:id="btnOk"  text="ACTUALIZAR" />
    </HBox>
</GridPane>
